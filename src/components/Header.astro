---
import {SITE_METADATA, NAVIGATION} from '@/consts';
import HeaderLink from './HeaderLink.astro';
import MobileNav from "./MobileNav.astro";
import ThemeSwitcher from "./ThemeSwitcher.astro";
---

<header class="flex items-center justify-between py-10">
    <div>
          <a class='flex text-2xl font-semibold gap-1' href="/" aria-label="Brand">
            <span>NetGrad</span>
            <span class='font-mono text-[0.5em]'>beta</span>
          </a>
    </div>
    <div class="flex items-center leading-5 space-x-4 sm:space-x-6">
        {NAVIGATION
            .filter((link) => link.href !== '/')
            .map((link) => (
                    <HeaderLink
                            href={link.href}
                            class="hidden sm:block font-sm text-gray-900 dark:text-gray-100"
                    >
                        {link.title}
                    </HeaderLink>
            ))}

        <MobileNav/>
    </div>
</header>
